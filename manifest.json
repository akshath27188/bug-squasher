{
  "manifest_version": 3,
  "name": "Bug Squasher AI",
  "version": "1.0",
  "description": "Select buggy code on any page, right-click, and get an AI-powered fix.",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Bug Squasher AI"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
