{
  "manifest_version": 2,
  "name": "Bug Squasher AI",
  "version": "1.0",
  "description": "Select buggy code on any page, right-click, and get an AI-powered fix.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg"
    },
    "default_title": "Bug Squasher AI"
  }
}
